<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".splash.PokemonSplashFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginBottom="@dimen/_48dp"
        app:layout_constraintBottom_toTopOf="@id/splashImage"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_32sp"
        android:id="@+id/titleText"
        android:text="@string/pokedex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toBottomOf="@id/splashImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startBtn"
        android:text="@string/start"
        android:textSize="@dimen/_28sp"
        android:layout_marginTop="@dimen/_48dp"
        android:paddingHorizontal="@dimen/_32dp"
        app:layout_constraintStart_toStartOf="@id/splashImage"
        app:layout_constraintEnd_toEndOf="@id/splashImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>